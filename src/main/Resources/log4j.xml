<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">
    <appender name="console" class="org.apache.log4j.ConsoleAppender">
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d{yyyy-MM-dd HH:mm:ss} %-5p %c %M:%L - %m%n"/>
        </layout>
    </appender>

    <appender name="stdout" class="org.apache.log4j.DailyRollingFileAppender">
        <param name="append" value="true"/>
        <param name="file" value="/home/workspace/practice.log"/>
        <param name="datePattern" value="'.'yyyy-MM-dd"/>
        <param name="encoding" value="UTF-8"/>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d{yyyy-MM-dd HH:mm:ss} %-5p %t %c %M:%L - %m%n"/>
        </layout>
    </appender>

    <!-- 异常 -->
    <logger name="errorLogger" additivity="false">
        <level value="ERROR"/>
        <appender-ref ref="messageAppender" />
    </logger>

    <!-- 警告 -->
    <logger name="warnLogger" additivity="false">
        <level value="WARN"/>
        <appender-ref ref="messageAppender" />
    </logger>

    <!-- 调试 -->
    <logger name="debugLogger" additivity="false">
        <level value="DEBUG"/>
        <appender-ref ref="messageAppender" />
    </logger>

    <!-- 打点 -->
    <logger name="eventLogger" additivity="false">
        <level value="INFO"/>
        <appender-ref ref="messageAppender" />
    </logger>

    <!-- outIn -->
    <logger name="outInLogger" additivity="false">
        <level value="INFO"/>
        <appender-ref ref="messageAppender" />
    </logger>

    <!-- inOut -->
    <logger name="inOutLogger" additivity="false">
        <level value="INFO"/>
        <appender-ref ref="messageAppender" />
    </logger>

    <!-- 消息 -->
    <logger name="messageLogger" additivity="false">
        <level value="INFO"/>
        <appender-ref ref="messageAppender" />
    </logger>

    <!-- 检查 -->
    <logger name="checkListLogger" additivity="false">
        <level value="INFO"/>
        <appender-ref ref="messageAppender" />
    </logger>

    <root>
        <level value="INFO"/>
        <appender-ref ref="console"/>
        <appender-ref ref="stdout"/>
    </root>
</log4j:configuration>
